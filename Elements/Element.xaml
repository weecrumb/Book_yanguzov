<UserControl x:Class="Book_yanguzov.Elements.Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Book_yanguzov.Elements"
             mc:Ignorable="d">
    <Grid Height="100" Background="LightBlue" Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tbName" Text="Наименование: ух ты" Margin="10,10,9.8,0" VerticalAlignment="Top"
                   Foreground="White" FontWeight="Bold" Grid.ColumnSpan="3"/>
        <TextBlock x:Name="tbGenre" Text="Жанр: ваушки" Margin="10,36,9.8,10"
                   Foreground="White" TextWrapping="Wrap"/>
        <TextBlock x:Name="tbAuthor" Text="Автор: ого" Margin="9.2,36,9.8,10"
                   Foreground="White" TextWrapping="Wrap" Grid.Column="1"/>
    </Grid>
</UserControl>
